extends layout

block title
    title Badgerat - Reset Password

block content
    include header
        block navlist
            li
                a(href='/login') Log in
            li
                a(href='/register') Register

    section#canvas
        form.resetPassword(action='resetpassword', method='post', novalidate)
            h2 Reset Password
            fieldset
                input#email(type='email', name='email', placeholder='email')
            fieldset
                img.ajaxSpinner(src='/static/img/ajax-loader.gif', style='display: none;', width='16', height='16', alt='Loading...')
                input#submit(type='submit', value='Reset Password', name='submit')

